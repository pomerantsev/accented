---
import Accented from '../components/Accented.astro';

type Heading = {
  depth: number;
  slug: string;
  text: string;
};
const { headings, title } = Astro.props as { title?: string, headings: Array<Heading> };
const h1 = headings?.find(h => h.depth === 1);
const renderedTitle = title ?? h1?.text;

const isDev = import.meta.env.DEV;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{(renderedTitle ? `${renderedTitle} | ` : '') + 'Accented'}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <main>
      <slot />
    </main>
    {isDev && <Accented />}
  </body>
</html>
