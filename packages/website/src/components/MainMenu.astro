---
const { pathname } = Astro.url;

import Github from './icons/Github.astro';

const menuItems = [
  { href: '/getting-started', text: 'Getting started' },
  { href: '/api', text: 'API' },
  { href: '/how-it-works', text: 'How it works' },
  { href: '/about', text: 'About' },
  /* TODO: { href: '/blog', text: 'Blog' }, */
  { href: 'https://stackblitz.com/edit/accented-playground-react-ts?file=src%2Fmain.tsx', text: 'Playground', external: true },
  { href: 'https://github.com/pomerantsev/accented', icon: 'Github' },
];
---
<style>
  header {
    position: relative;

    padding-block: var(--space-s);
    @media (min-width: 50em) {
      padding-block: var(--space-l);
    }
  }

  #skip-link {
    background-color: var(--color-primary);
    color: var(--color-background);
    text-decoration-color: currentColor;
    font-weight: 600;

    padding: var(--space-2xs) var(--space-s);

    position: absolute;
    inset-inline-start: 0;
    inset-block-end: 100%;

    &:focus {
      inset-block-end: unset;
      inset-block-start: var(--space-s);
    }
  }

  nav {
    display: flex;

    flex-direction: column;
    align-items: center;

    gap: var(--space-2xs);

    @media (min-width: 50em) {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  nav > :first-child {
    display: flex;
    align-items: center;
    gap: var(--space-2xs);

    font-size: var(--size-step-1);
    font-weight: 600;

    img {
      inline-size: var(--size-step-2);
    }
  }
  ul {
    margin: 0;
    padding: 0;

    display: flex;
    justify-content: center;
    gap: var(--space-2xs) var(--space-m);
    flex-wrap: wrap;
  }

  nav a {
    text-decoration-line: none;
  }

  nav a[aria-current="page"] {
    border-bottom: 2px solid var(--color-primary);
  }
  @media (hover: hover) {
    nav a:hover {
      color: var(--color-primary);
    }
  }

  .icon {
    display: inline-block;
    inline-size: 1em;
    vertical-align: middle;
  }

  a.external::after {
    content: 'â†—';
  }
</style>
<header>
  <a id="skip-link" href="#main-content">Skip to main content</a>
  <nav aria-label="Menu">
    <a href="/">
      <img src="/images/logo.svg" alt="" width="32">
      Accented
    </a>
    <ul role="list">
      {menuItems.map(item => (
        <li>
          {(() => {
            if (item.icon === 'Github') {
              return (
                <a href={item.href} aria-label="Github">
                  <span class="icon">
                    <Github />
                  </span>
                </a>
              );
            }
            return (
              <a
                href={item.href}
                aria-current={pathname === item.href ? 'page' : undefined}
                class={item.external ? 'external' : ''}
              >
                {item.text}
              </a>
            );
          })()}
        </li>
      ))}
    </ul>
  </nav>
</header>
