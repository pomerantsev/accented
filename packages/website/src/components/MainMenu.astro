---
import Github from '~/components/icons/Github.astro';
import { playgroundUrl } from '~/constants';

const { pathname } = Astro.url;

type Icon = 'Github';

type MenuItemBase = {
  id: string;
  href: string;
  external?: boolean;
};

type MenuItemText = MenuItemBase & {
  text: string;
  icon?: never;
};

type MenuItemIcon = MenuItemBase & {
  text?: never;
  icon: Icon;
};

type MenuItem = MenuItemText | MenuItemIcon;

const menuItems: Array<MenuItem> = [
  { id: 'getting-started', href: '/getting-started', text: 'Getting started' },
  { id: 'api', href: '/api', text: 'API' },
  { id: 'how-it-works', href: '/how-it-works', text: 'How it works' },
  { id: 'about', href: '/about', text: 'About' },
  // { id: 'blog', href: '/blog', text: 'Blog' },
  {
    id: 'playground',
    href: playgroundUrl,
    text: 'Playground',
    external: true,
  },
  { id: 'github', href: 'https://github.com/pomerantsev/accented', icon: 'Github' },
];

function isCurrent(item: MenuItem, pathname: string): boolean {
  if ('text' in item) {
    if (item.id === 'blog' && pathname.startsWith('/blog/')) {
      return true;
    }
    return pathname === item.href;
  }
  return false;
}
---
<style>
  header {
    position: relative;

    padding-block: var(--space-m);
    @media (min-width: 50em) {
      padding-block: var(--space-l);
    }
  }

  #skip-link {
    position: absolute;
    inset-inline-start: 0;
    inset-block-end: 100%;

    &:focus {
      inset-block-end: unset;
      inset-block-start: var(--space-s);
    }
  }

  nav {
    display: flex;

    flex-direction: column;
    align-items: center;

    column-gap: var(--space-2xs);
    row-gap: var(--space-s);

    @media (min-width: 50em) {
      flex-direction: row;
      justify-content: space-between;
    }

    font-weight: 600;
  }

  nav > :first-child {
    display: flex;
    align-items: center;
    gap: var(--space-2xs);

    font-size: var(--size-step-1);

    img {
      inline-size: var(--size-step-2);
    }
  }
  ul {
    margin: 0;
    padding: 0;

    display: flex;
    justify-content: center;
    gap: var(--space-2xs) var(--space-m);
    flex-wrap: wrap;
  }

  nav a:not([aria-current="page"]) {
    text-decoration-line: none;
  }

  @media (hover: hover) {
    nav a:hover {
      color: var(--color-primary);
      text-decoration-color: currentColor;
    }
  }

  a.external::after {
    content: 'â†—';
  }
</style>
<header>
  <a class="call-to-action" id="skip-link" href="#main-content">Skip to main content</a>
  <nav aria-label="Menu">
    <a href="/">
      <img src="/images/logo.svg" alt="" width="32">
      Accented
    </a>
    <ul role="list">
      {menuItems.map(item => (
        <li>
          {(() => {
            if (item.icon === 'Github') {
              return (
                <a href={item.href} aria-label="Github">
                  <span class="icon">
                    <Github />
                  </span>
                </a>
              );
            }
            return (
              <a
                href={item.href}
                aria-current={isCurrent(item, pathname) ? 'page' : undefined}
                class={item.external ? 'external' : ''}
              >
                {item.text}
              </a>
            );
          })()}
        </li>
      ))}
    </ul>
  </nav>
</header>
