---
import MainMenu from '../components/MainMenu.astro';
import Accented from '../components/Accented.astro';
import { primaryColorDark, primaryColorLight, colorLight, colorDark, fontSystemSans, fontSystemMono } from 'common/tokens';

const { title } = Astro.props;

const isDev = import.meta.env.DEV;
---

<html lang="en">
  <head>

    <meta charset="UTF-8" />

    <!-- Disallow indexing until I'm happy with the content. -->
    <meta name="robots" content="noindex">

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{(title ? `${title} | ` : '') + 'Accented'}</title>

    <link rel="icon" href="/favicon.ico"/>


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&family=IBM+Plex+Sans:wght@400;600&family=Lora:wght@500&display=swap" rel="stylesheet">

    <style
      is:global
      define:vars={{
        primaryColorDark,
        primaryColorLight,
        colorLight,
        colorDark,
        fontSystemSans,
        fontSystemMono,
      }}>
    </style>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <MainMenu />
    <main id="main-content">
      <slot />
    </main>
    <footer>
      <p>Made by <a href="https://www.pavelpomerantsev.com">Pavel Pomerantsev</a>.</p>
    </footer>
    {isDev && <Accented />}
  </body>
</html>
