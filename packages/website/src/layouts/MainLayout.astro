---
import MainMenu from '../components/MainMenu.astro';
import Accented from '../components/Accented.astro';
import { primaryColorDark, primaryColorLight, colorLight, colorDark, fontSystemSans, fontSystemMono } from 'common/tokens';

const { title, description } = Astro.props;

const fullTitle = (title ? `${title} | ` : '') + 'Accented';

const isDev = import.meta.env.DEV;
---

<html lang="en">
  <head>

    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta name="author" content="Pavel Pomerantsev" />

    <title>{fullTitle}</title>
    {description && <meta name="description" content={description} />}

    <link rel="icon" href="/favicon.ico"/>


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&family=IBM+Plex+Sans:wght@400;600&family=Lora:wght@500&display=swap" rel="stylesheet">

    <style
      is:global
      define:vars={{
        primaryColorDark,
        primaryColorLight,
        colorLight,
        colorDark,
        fontSystemSans,
        fontSystemMono,
      }}>
    </style>
    <link rel="stylesheet" href="/styles/global.css" />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta property="og:image" content="https://www.accented.dev/images/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:title" content={fullTitle} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:url" content={`https://www.accented.dev${Astro.url.pathname}`} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Accented" />
    <meta property="og:locale" content="en_US" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    {description && <meta name="twitter:description" content={description} />}
    <meta name="twitter:image" content="https://www.accented.dev/images/og-image.png" />
  </head>
  <body>
    <MainMenu />
    <main id="main-content">
      <slot />
    </main>
    <footer>
      <p>Made by <a href="https://www.pavelpomerantsev.com">Pavel Pomerantsev</a>.</p>
    </footer>
    {isDev && <Accented />}
  </body>
</html>
