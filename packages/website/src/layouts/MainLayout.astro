---
// More on importing fonts: https://fontsource.org/docs/getting-started/variable
import '@fontsource/ibm-plex-mono';
import '@fontsource-variable/ibm-plex-sans';
import '@fontsource-variable/ibm-plex-sans/standard-italic.css';
import '@fontsource-variable/lora';
import {
  colorDark,
  colorLight,
  fontSystemMono,
  fontSystemSans,
  primaryColorDark,
  primaryColorLight,
} from 'common/tokens';
import favicon from '~/assets/favicon.ico';
import ogImage from '~/assets/images/og-image.png?url';
import globalCss from '~/assets/styles/global.css?url';
import Accented from '~/components/Accented.astro';
import MainMenu from '~/components/MainMenu.astro';

const { title, description } = Astro.props;

const fullTitle = `${title ? `${title} | ` : ''}Accented`;

const isDev = import.meta.env.DEV;
---

<html lang="en">
  <head>

    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta name="author" content="Pavel Pomerantsev" />

    <title>{fullTitle}</title>
    {description && <meta name="description" content={description} />}

    <link rel="icon" href={favicon}/>

    <style
      is:global
      define:vars={{
        primaryColorDark,
        primaryColorLight,
        colorLight,
        colorDark,
        fontSystemSans,
        fontSystemMono,
      }}>
    </style>
    <link rel="stylesheet" href={globalCss} />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta property="og:image" content={`https://accented.dev${ogImage}`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:title" content={fullTitle} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:url" content={`https://accented.dev${Astro.url.pathname}`} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Accented" />
    <meta property="og:locale" content="en_US" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    {description && <meta name="twitter:description" content={description} />}
    <meta name="twitter:image" content={`https://accented.dev${ogImage}`} />
  </head>
  <body>
    <MainMenu />
    <main id="main-content">
      <slot />
    </main>
    <footer class="flow">
      <p>Made by <a href="https://www.pavelpomerantsev.com">Pavel Pomerantsev</a>.</p>
      <p>axe-coreÂ® is a trademark of Deque Systems, Inc. in the US and other countries.</p>
    </footer>
    <script>
      import '~/components/copyCode';
    </script>
    {isDev && <Accented />}
  </body>
</html>
