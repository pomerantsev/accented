---
import MainLayout from './MainLayout.astro';

type Heading = {
  depth: number;
  slug: string;
  text: string;
};
const { headings } = Astro.props as { headings: Array<Heading> };
const h1 = headings?.find(h => h.depth === 1);
---

<MainLayout title={h1?.text}>
  <article class="flow">
    <slot />
  </article>
</MainLayout>
