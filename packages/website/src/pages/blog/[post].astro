---
import { getCollection, getEntry, render } from 'astro:content';
import MainLayout from '~/layouts/MainLayout.astro';
import { formatPostDate, getPostDate } from '~/pages/blog/helpers';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({ params: { post: post.id } }));
}

const { post: postId } = Astro.params;

const post = await getEntry('blog', postId);
if (!post) {
  throw new Error(`Post with ID "${postId}" not found.`);
}

const { Content } = await render(post);
---

<MainLayout description={post.data.description}>
  <nav aria-label="Breadcrumbs">
    <a href="/blog">‚Üê All posts</a>
  </nav>
  <article class="flow">
    <h1>{post.data.title}</h1>
    <p>
      <time datetime={getPostDate(post)}>{formatPostDate(post)}</time>, by {
        post.data.author
      }
    </p>
    <p class="subtitle">
      {post.data.description}
    </p>
    <Content />
  </article>
</MainLayout>
